<mapper namespace="com.team3.mapper.UserInfoMapper">

    <!-- 게시물 상세 쿼리 1:1 데이터 조회 -->
    <select id="findUser" parameterType="com.team3.dto.UserInfoDto" resultType="int">
        SELECT EXISTS(
                       SELECT 1
                       FROM USER_INFO
                       WHERE USER_ID = #{id}
                         AND PASSWORD = #{password}
                   )

    </select>

    <select id="idCheck" parameterType="String" resultType="int">
        SELECT count(USER_ID)
        FROM USER_INFO
        WHERE USER_ID = #{id}
    </select>

    <insert id="insertUserInfo" parameterType="com.team3.dto.UserInfoDto">
        INSERT INTO USER_INFO
            (USER_ID, PASSWORD, NAME, PHONENUMBER)
        VALUES (#{id}, #{password}, #{name}, #{phoneNumber})
    </insert>
